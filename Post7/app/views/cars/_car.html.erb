<div id="<%= dom_id car %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= car.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= car.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Model:</strong>
    <%= car.model %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Year:</strong>
    <%= car.year %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Make:</strong>
    <%= car.make %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= car.body %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Vin:</strong>
    <%= car.vin %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Miles:</strong>
    <%= car.miles %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Zipcode:</strong>
    <%= car.zipcode %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Askprice:</strong>
    <%= car.askprice %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this car", car, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this car', edit_car_path(car), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
