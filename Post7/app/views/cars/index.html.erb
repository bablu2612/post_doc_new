<style>
.icons {
    display: grid;
    grid-template-columns: repeat(3,1fr);
}

.icons>* {
    background: #000;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: grid;
    color: #fff;
    place-items: center;
    font-size: 12px;
    text-decoration: none;
    font-weight: 900;
}

.icons * {
    color: #fff;
    place-items: center;
    font-size: 12px;
    text-decoration: none;
    font-weight: 900;
}

.icons > *:nth-child(1) {background: #4b42df;}
.icons > *:nth-child(3) {background: #e55209;}
a.text-indigo-600.hover\:text-indigo-900 {
    background: #2563eb;
}
h2 {
    text-transform: uppercase;
    font-weight: 700;
    font-size: 30px;
    margin: 20px 0;
    border-left: 5px solid #2563eb;
    padding-left: 20px;
}
.header_admin {
    margin-top: 50px;
}
.header_admin  p {
    font-size: 16px;
}
</style>
<div class="w-full">
 

  <% if notice.present? %>
  <div class="rounded-md bg-green-50 p-4">
  <div class="flex">
    <div class="flex-shrink-0">
      <!-- Heroicon name: mini/check-circle -->
      <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <p class="text-sm font-medium text-green-800"><%= notice %></p>
    </div>
    <div class="ml-auto pl-3">
      <div class="-mx-1.5 -my-1.5">
        <button type="button" class="inline-flex rounded-md bg-green-50 p-1.5 text-green-500 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-offset-2 focus:ring-offset-green-50">
          <span class="sr-only">Dismiss</span>
          <!-- Heroicon name: mini/x-mark -->
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<% end %>



<div class="px-4 sm:px-6 lg:px-8 ">
  <div class="sm:flex sm:items-center header_admin">
    <div class="sm:flex-auto">
      <h2 class="text-xl font-semibold text-gray-900">Vehicle lists</h2>
      <p class="mt-2 text-sm text-gray-700">A list of all the vehicles.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= button_to 'New car', new_car_path, method: :get, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Phone</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Model</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Year</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Make</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Zipcode</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Body</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Url</th>


                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Edit</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
            <% @cars.each do |car| %>
              <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= car.name %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.phone %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.model %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.year %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.make %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.zipcode %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.body %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">https://pmv.postyourcars.com/cars/<%= car.slug %></td>

              

              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
              <div class="icons">
              <%= link_to edit_car_path(car.id), class: "text-indigo-600 hover:text-indigo-900" do %>

                <i class="fa-regular fa-pen-to-square"></i>

                <% end %>

              <%= link_to car_path(car.id), class: "text-indigo-600 hover:text-indigo-900",target: "_blank" do %>
                <i class="fa-solid fa-eye"></i>
                <% end %>
              
              <!-- <%= link_to 'Add Similar listing', car_car_compares_path(car.id), class: "text-indigo-600 hover:text-indigo-900"  %> -->

              
              <%= button_to car_path(car.id), method: :delete, class: "text-indigo-600 hover:text-indigo-900" do %>
                <i class="fa-solid fa-trash"></i>
                <% end %>
                </div>
              </td>
            </tr>
            <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
